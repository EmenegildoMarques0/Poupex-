{
  // formata automaticamente ao salvar
  "editor.formatOnSave": true,

  // largura da indentação = 4 espaços
  "editor.tabSize": 4,

  // usa espaços em vez de tab físico (se quiser tab real: false)
  "editor.insertSpaces": true,

  // força identação padrão JS/TS/React
  "[javascript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  }
}
